<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_f5f5f5"
        android:orientation="vertical">

        <com.lespayne.base.view.TitleView
            android:id="@+id/layout_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" />

        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/dp_20"
            android:src="@drawable/ic_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginHorizontal="@dimen/dp_8"
            android:background="@drawable/conner_white_bg_shape"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/left_name"
                style="@style/PersonalTextStyle2"
                android:text="用户名称" />

            <com.lespayne.base.view.AutoClearEditText
                android:id="@+id/right_name"
                style="@style/PersonalRightTextStyle"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:ellipsize="end"
                android:maxLines="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/self_sex"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginHorizontal="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/conner_white_bg_shape"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/left_sex"
                style="@style/PersonalTextStyle2"
                android:text="性别" />

            <LinearLayout
                android:id="@+id/right_layout"
                style="@style/PersonalRightTextStyle"
                android:layout_gravity="center_vertical"

                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_boy"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="wrap_content"
                    android:text="男"
                    android:paddingLeft="@dimen/dp_6"
                    android:button="@drawable/bg_check_box"
                    android:textColor="@color/gray_7f7f7f"
                    android:textSize="@dimen/sp_13" />

                <CheckBox
                    android:id="@+id/cb_gril"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="wrap_content"
                    android:text="女"
                    android:paddingLeft="@dimen/dp_6"
                    android:button="@drawable/bg_check_box"
                    android:textColor="@color/gray_7f7f7f"
                    android:textSize="@dimen/sp_13" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/self_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginHorizontal="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/conner_white_bg_shape"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/left_phone"
                style="@style/PersonalTextStyle2"
                android:text="手机号" />

            <com.lespayne.base.view.AutoClearEditText
                android:id="@+id/right_phone"
                style="@style/PersonalRightTextStyle"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:ellipsize="end"
                android:maxLines="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/self_age"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginHorizontal="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/conner_white_bg_shape"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/left_age"
                style="@style/PersonalTextStyle2"
                android:text="年龄" />

            <com.lespayne.base.view.AutoClearEditText
                android:id="@+id/right_age"
                style="@style/PersonalRightTextStyle"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:ellipsize="end"
                android:maxLines="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/self_password1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginHorizontal="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/conner_white_bg_shape"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/left_password1"
                style="@style/PersonalTextStyle2"
                android:text="登录密码" />

            <com.lespayne.base.view.AutoClearEditText
                android:id="@+id/right_password1"
                style="@style/PersonalRightTextStyle"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:ellipsize="end"
                android:maxLines="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/self_password2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginHorizontal="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/conner_white_bg_shape"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/left_password2"
                style="@style/PersonalTextStyle2"
                android:text="确认密码" />

            <com.lespayne.base.view.AutoClearEditText
                android:id="@+id/right_password2"
                style="@style/PersonalRightTextStyle"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:ellipsize="end"
                android:maxLines="1" />
        </LinearLayout>

        <TextView
            android:id="@+id/activity_register"
            style="@style/common_row_btn"
            android:layout_below="@id/layout_input"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_35"
            android:gravity="center"
            android:text="@string/register_title"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
</layout>