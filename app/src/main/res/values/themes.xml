<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmartWear" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="toolbarStyle">@style/ClubToolbar</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/black</item>
    </style>

    <style name="ClubToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item><!-- 设置该属性解决空白部分-->
    </style>

    <style name="LoginLayoutStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="PersonalLongLine">
        <item name="android:background">@color/gray_e5e5e5</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dip</item>
    </style>


    <style name="common_row_btn">
        <item name="android:background">@drawable/btn_action_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_36</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="home_image_style">
        <item name="android:background">@drawable/btn_action_bg</item>
        <item name="android:layout_width">@dimen/dp_25</item>
        <item name="android:layout_height">@dimen/dp_25</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">@dimen/dp_20</item>
        <item name="android:layout_marginTop">@dimen/dp_20</item>
    </style>

    <style name="home_txt_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">@dimen/dp_20</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/gray_666666</item>
    </style>

    <style name="PersonalTextStyle">
        <item name="android:layout_width">@dimen/dp_80</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textColor">@color/gray_333333</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="PersonalTextStyle2">
        <item name="android:layout_width">@dimen/dp_80</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textColor">@color/gray_333333</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="InnerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:focusable">true</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
    </style>


    <style name="PersonalRightTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">4</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="background">@color/white</item>
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:textColor">@color/gray_7f7f7f</item>
    </style>


    <style name="common_longline">
        <item name="android:background">@color/gray_f2f2f2</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_0_5</item>
    </style>

</resources>